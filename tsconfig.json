{
	"compileOnSave": true,
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"declaration": false,
		"emitDecoratorMetadata": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": true,
		"inlineSourceMap": true,
		"inlineSources": false,
		"lib": ["esnext", "esnext.array", "esnext.asynciterable", "esnext.intl", "esnext.symbol"],
		"module": "commonjs",
		"moduleResolution": "node",
		"noEmitOnError": true,
		"outDir": "dist",
		"rootDirs": ["src", "scripts", "types"],
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"strictPropertyInitialization": false, // typeorm fields are not initialised, so disable this rule
		"target": "ESNEXT",
		"paths": {
			"@util/*": ["src/util/*"],
			"@assets/*": ["assets/*"]
		},
		"typeRoots": ["types"]
	}
}
